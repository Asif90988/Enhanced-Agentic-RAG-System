# .env file
DATABASE_URL=postgresql://rag_user:rag_password@localhost:5432/rag_db

# Database Configuration
POSTGRES_USER=rag_user
POSTGRES_PASSWORD=rag_password
POSTGRES_DB=rag_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=unstructured_data

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Milvus Configuration (Vector Store)
MILVUS_HOST=localhost
MILVUS_PORT=19530

# News API (Optional - if you want to use the NewsConnector)
NEWS_API_KEY=YOUR_NEWS_API_KEY_HERE

# Serper API (Optional - if you want to use Serper for web search in agents)
SERPER_API_KEY=YOUR_SERPER_API_KEY_HERE

# OpenAI API Key (Optional - if you use OpenAI models for agents/NLP)
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE

# Flask Application Secret Key
FLASK_SECRET_KEY=a_very_secret_and_random_key_for_flask
